<section>
    <br><br><br>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Add Sub-Category</h2>
                <form action="/bigwig/add-sub-category" enctype="multipart/form-data" method="POST">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" required>

                    <label for="">Main Category</label>
                     <select class="form-control" name="ParentCat">
                     {{#each category}}
                        <option value="{{this.Name}}">{{this.Name}}</option>
                       {{/each}}

                    </select>
                    <label for="">Image</label>
                    <input type="file" name="Image" class="form-control" required>

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                 <a href="/bigwig/all-sub-category" type="submit" class="btn btn-danger mt-4">Cancel</a>

                </form>
            </div>
        </div>
    </div>
</section>