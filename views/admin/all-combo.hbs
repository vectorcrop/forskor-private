






   <div class="page-content-wrapper py-4">
      <div class="container-lg">
        <center><h3>Manage Combo-Offers</h3></center>
                                <a href="/admin/casher" class="btn btn-primary mb-3 mt-3">Back to main</a>
                        <a href="/admin/add-combo" class="btn btn-dark mb-3 mt-3">Add Combo</a>

        <div class="card">
          <div class="card-body p-3">
            <table class="data-table w-100" id="dataTable">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Offer Price</th>
                  <th>Original Price</th>
                  <th>Category</th>
                  <th>Image</th>
                  <th>Actions</th>

                </tr>
              </thead>
              <tbody>
               {{#each combos}}
                <tr>
                  <td>{{incremented @index}}</td>
                  <td>{{this.Name}}</td>
                 <td>{{this.Offer}}/-</td>
                  <td>{{this.Price}}/-</td>
                   <td>Category</td>

                  <td><img src="/images/combo-images/{{this._id}}.png" alt="" style="width: 3rem"></td>
                  <td>       <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Action
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item"
                                            href="/admin/edit-combo/{{this._id}}">Edit</a>
                                    </li>
                                    <li><a class="dropdown-item"
                                            href="/admin/delete-combo/{{this._id}}" onclick="return confirm('Are You Sure to Delete This ?')">Delete</a>
                                    </li>
                                   
                                </ul>
                            </div></td>
                </tr>
                {{/each}}

             
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>