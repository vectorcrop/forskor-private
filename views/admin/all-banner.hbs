
   <div class="page-content-wrapper py-4">
      <div class="container-lg">
        <center><h3>Manage Banner</h3></center>
                                <a href="/bigwig/" class="btn btn-primary mb-3 mt-3">Back to main</a>

                        <a href="/bigwig/add-banner" class="btn btn-dark mb-3 mt-3">Add a banner</a>

        <div class="card">
          <div class="card-body p-3">
            <table class="data-table w-100" id="dataTable">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Heading</th>
                  <th>Sub Heading</th>
                   <th>Button Path</th>
                  <th>Image</th>
                  <th>Actions</th>

                </tr>
              </thead>
              <tbody>
               {{#each banners}}
                <tr>
                  <td>{{incremented @index}}</td>
                  <td>{{this.Name}}</td>
                  <td>{{this.Sheading}}</td>
                  <td>{{this.Path}}</td>


                  <td><img src="/images/banner-images/{{this._id}}.png" alt="" style="width: 7rem"></td>
                  <td>       <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Action
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item"
                                            href="/bigwig/edit-banner/{{this._id}}">Edit</a>
                                    </li>
                                    <li><a class="dropdown-item"
                                            href="/bigwig/delete-banner/{{this._id}}" onclick="return confirm('Are You Sure to Delete This ?')">Delete</a>
                                    </li>
                                   
                                </ul>
                            </div></td>
                </tr>
                {{/each}}

             
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>