
   <div class="page-content-wrapper py-4">
      <div class="container-lg">
        <center><h3>Manage Main Category</h3></center>
                        <a href="/bigwig/" class="btn btn-primary mb-3 mt-3">Back to main</a>
                        <a href="/bigwig/add-maincat" class="btn btn-dark mb-3 mt-3">Add a category</a>

        <div class="card">
          <div class="card-body p-3">
            <table class="data-table w-100" id="dataTable">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Image</th>
                  <th>Actions</th>

                </tr>
              </thead>
              <tbody>
               {{#each maincat}}
                <tr>
                  <td>{{incremented @index}}</td>
                  <td>{{this.Name}}</td>

                  <td><img src="/images/maincat-images/{{this._id}}.png" alt="" style="width: 3rem"></td>
                  <td>      
                                <a href="/bigwig/edit-maincat/{{this._id}}" class="btn btn-primary" type="button">
                                    Edit
                                </a>
                              
                </td>
                </tr>
                {{/each}}

             
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>