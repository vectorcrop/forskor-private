






   <div class="page-content-wrapper py-4">
      <div class="container-lg">
        <center><h3>Manage Items</h3></center>
                                <a href="/admin/casher" class="btn btn-primary mb-3 mt-3">Back to main</a>
                        <a href="/admin/add-product" class="btn btn-dark mb-3 mt-3">Add a Product</a>

        <div class="card">
          <div class="card-body p-3">
            <table class="table table-striped table-bordered" id="dataTable">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Offer Price</th>
                  <th>Original Price</th>
                  <th>Category</th>
                  <th>Type</th>
                  <th>Image</th>
                  <th>Actions</th>

                </tr>
              </thead>
              <tbody>
               {{#each products}}
                <tr>
                  <td>{{incremented @index}}</td>
                  <td><font color="black"><b>{{this.Name}}</b></font></td>
                  <td><font color="primary"><b>{{this.Offer}}/-</b></font></td>
                  <td><font color="red"><b>{{this.Price}}/-</b></font></td>
                  <td>{{this.ParentCat}}</td>
                  <td>{{this.Type}}</td>

                  <td><img src="/images/product-images/{{this._id}}.png" alt="" style="width: 3rem"></td>
                  <td>       <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Action
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item"
                                            href="/admin/edit-product/{{this._id}}">Edit</a>
                                    </li>
                                    <li><a class="dropdown-item"
                                            href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are You Sure to Delete This Product ?')">Delete</a>
                                    </li>
                                   
                                </ul>
                            </div></td>
                </tr>
                {{/each}}

             
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
