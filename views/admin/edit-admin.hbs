<div class="row mx-auto mt-5">
    <div class="col-md-6 mx-auto">
        <div class="container mt-5">
            <h2 class="text-center">Edit Admin</h2>
            <form action="/bigwig/edit-admin/{{adminId}}"  method="POST">
                {{#if editAdminErr}}
                <div class="alert alert-danger" role="alert">
                    <p class="error alert-heading">{{editAdminErr}}</p>
                </div>
                {{/if}}

                <div class="form-group mt-3">
                    <label>Name</label>
                    <input type="text" class="form-control mt-2" name="Name" placeholder="Enter Name" required
                        value={{adminDetails.Name}} >
                </div>
                <div class="form-group mt-3">
                    <label>Email address</label>
                    <input type="email" class="form-control mt-2" name="Email" placeholder="Enter Email" required
                        value={{adminDetails.Email}} >
                </div>
                <div class="form-group mt-3">
                    <label>Did you change Password ?</label> <br>
                    <div class="mt-2" style="margin-left: 10px;">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="IsPassword" id="adminPasswordYes"
                                onclick="checkRadio('Yes')" value="1">
                            <label class="form-check-label mt-1" for="adminPasswordYes">
                                Yes
                            </label>
                        </div>
                        <div class="form-check form-check-inline    ">
                            <input class="form-check-input" type="radio" name="IsPassword" id="adminPasswordNo"
                                onclick="checkRadio('No')" value="0" checked>
                            <label class="form-check-label mt-1" for="adminPasswordNo">
                                No
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3 d-none" id="password">
                    <label>Password</label>
                    <input type="password" class="form-control mt-2" name="Password" placeholder="Password">
                </div>
                <div class="form-group mt-3">
                    <label>Role</label> <br>
                    <div class="mt-2" style="margin-left: 10px;">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="Role" id="adminrole1" value="1" {{#ifeq
                                adminDetails.Role "1" }} checked {{/ifeq}}>
                            <label class="form-check-label mt-1" for="adminrole1">
                                Casher
                            </label>
                        </div>
                        <div class="form-check form-check-inline    ">
                            <input class="form-check-input" type="radio" name="Role" id="adminrole2" value="3" {{#ifeq
                                adminDetails.Role "3" }} checked {{/ifeq}}>
                            <label class="form-check-label mt-1" for="adminrole2">
                                Chef
                            </label>
                        </div>
                        <div class="form-check form-check-inline    ">
                            <input class="form-check-input" type="radio" name="Role" id="adminrole3" value="4" {{#ifeq
                                adminDetails.Role "4" }} checked {{/ifeq}}>
                            <label class="form-check-label mt-1" for="adminrole3">
                                Delivery Boy
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary mt-2">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function checkRadio(name) {
        if (name == "Yes") {
            document.getElementById("password").className = "d-block"
        } else if (name == "No") {
            document.getElementById("password").className = "d-none"
        }
    }</script>