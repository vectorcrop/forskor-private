<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Offer</h2>
                <form action="/bigwig/edit-offer/{{offer._id}}" enctype="multipart/form-data" method="POST">
                    <label for="" class="mt-3">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{offer.Name}}" required>

                    <label for="" class="mt-3">Category</label>
                    <input type="text" name="Category" class="form-control" value="{{offer.Category}}" required>

                    <label for="" class="mt-3">Price</label>
                    <input type="text" name="Price" class="form-control" value="{{offer.Price}}" required>

                    <label for="" class="mt-3">Description</label>
                    <input type="text" name="Description" class="form-control" value="{{offer.Description}}" required>

                    <label for="" class="mt-3">Image</label>
                    <img src="/images/offer-images/{{offer._id}}.png" alt=""
                        style="width: 5rem; margin-bottom: 8px;" id="imgView">
                    <input type="file" name="Image" class="form-control" onchange="viewImage(event)">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event) {
        document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0]);
    }
</script>