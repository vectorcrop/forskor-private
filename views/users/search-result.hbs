<br /><br /><br />
<div class="container">
  <div class="card mb-4">
    <div class="card-body p-2">
      <div class="chat-search-box">
        <form action="/search-result" method="POST">
          <div class="input-group"><span
              class="input-group-text"
              name="search"
              id="searchbox"
            ><i class="bi bi-search"></i></span>
            <input
              class="form-control form-control-clicked"
              name="search"
              type="search"
              placeholder="Search for itmes..."
              aria-describedby="searchbox"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Top Products-->
<div class="top-products-area" style="margin-bottom: 4.5rem;">
  <div class="container ">
    <div class="row g-3">
      {{#each response}}
        <!-- Single Top Product Card-->
        <div class="col-6 col-sm-4 col-lg-3">
          <div class="card single-product-card">
            <div class="card-body p-3">
              <!-- Product Thumbnail--><a
                class="product-thumbnail d-block"
                href="#"
              ><img src="/images/product-images/{{this._id}}.png" alt="" />
                <!-- Badge--><span class="badge bg-primary">10%</span></a>
              <!-- Product Title--><a
                class="product-title d-block text-truncate"
                href=""
              >{{this.Name}}</a>
              <!-- Product Price-->
              <p class="sale-price">₹{{this.Offer}}<span
                >₹{{this.Price}}</span></p><button
                class="btn btn-primary btn-sm"
                onclick="addToCart('{{this._id}}')"
              >Add to Bag</button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>

<script>
  function addToCart(productId) { $.ajax({ url: "/add-to-cart/" + productId,
  method: "get", success: (response) => { if (response.status) { let count =
  $("#cart-count").html(); count = parseInt(count) + 1;
  $("#cart-count").html(count); } }, }); }
</script>