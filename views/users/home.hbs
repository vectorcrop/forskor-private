  }

  .card-text h2 {
    margin: 0 0 10px 0;
    font-size: 24px;
    font-weight: bold;
  }

  .card-text p {
    margin: 0;
    font-size: 16px;
    font-weight: normal;
    line-height: 1.5;
  }


  .modal-footer {
