<div class="page-content-wrapper py-3">
  <div class="container">
    <!-- Checkout Wrapper-->
    <div class="checkout-wrapper-area">
      <div class="card">
        <div class="card-body checkout-form">
          <h6 class="mb-3">Enter your billing details</h6>
          <form id="checkout-form">

            <div>
                <div class="form-group">
                <label class="mb-2">Type</label>

                <select
                  class="form-select"
                  id="type"
                  name="type"
                  aria-label="Default select example"
                >
                  <option value="delivery">Delivery</option>
                  <option value="pickup">Pick up</option>
                </select>
              </div>
              <div class="form-group">
                <label class="mb-2">Name</label>
                <input
                  class="form-control mb-3"
                  type="text"
                  name="name"
                  id="Name"
                  value="{{user.firstName}} {{user.lastName}}"
                  placeholder="{{user.firstName}} {{user.lastName}}"
                  required
                />
              </div>
              <div class="form-group">
                <label class="mb-2">Mobile</label>
                <input
                  class="form-control mb-3"
                  type="text"
                  name="phone"
                  id="phone"
                  value="{{user.phone}}"
                  placeholder="{{user.phone}}"
                  required
                />
              </div>
              <div class="form-group">
                <label class="mb-2">Place</label>

                <select
                  class="form-select"
                  id="place"
                  name="place"
                  aria-label="Default select example"
                >
                  <option
                    value="{{user.place}}"
                    selected
                  >{{user.place}}</option>
                  <option value="Kammanahalli">Kammanahalli</option>
                  <option value="Forskor City">Forskor City</option>
                  <option value="Near Wipro">Near Wipro</option>
                </select>
              </div>

              <div class="form-group">
                <label class="mb-2">Pincode</label>
                <input
                  class="form-control mb-3"
                  type="text"
                  name="pincode"
                  id="pincode"
                  value="{{user.pincode}}"
                  placeholder="{{user.pincode}}"
                  required
                />
              </div>

              <div class="form-group">
                <label class="mb-2">Address</label>
                <input
                  class="form-control mb-3"
                  type="text"
                  name="address"
                  id="address"
                  value="{{user.address}}"
                  placeholder="{{user.address}}"
                  required
                />
              </div>
              <input type="text" name="userId" value="{{user._id}}" hidden />
            </div>

            <div class="form-check mb-2">
              <input
                class="form-check-input"
                type="radio"
                name="payment-method"
                id="COD"
                value="COD"
                checked
              />
              <label class="form-check-label" for="COD">Cash on delivery</label>
            </div>

            {{! <div class="form-check mb-2">
                  <input class="form-check-input" type="radio"  name="payment-method" value="Cash paid ✔️" id="Cash paid ✔️">
                  <label class="form-check-label" for="Cash paid ✔️">Online Payment</label>
                </div> }}

            <button class="btn btn-danger mt-3 w-100" type="submit">Pay
              {{total}}
              &amp; Order</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $("#checkout-form").submit((e) => {
      e.preventDefault();
      $.ajax({
          url: '/place-order',
          method: 'post',
          data: $("#checkout-form").serialize(),
          success: (response) => {
              if (response.success) {
                  location.href =
                      '/order-placed'
              } else {
                alert(response.message);
                window.location = '/home';
             //     razorpayPayment(response)
              }
          }
      })
  })
  function verifyPayment(payment, order) {
    $.ajax({
      url: '/verify-payment',
        data: {
          payment,
          order
        },
        method: 'post',
        success: (response) => {
          if (response.status) {
            location.href = '/order-placed'
          } else {
            alert("Payment failed")
          }
        } 
    }) 
  }
</script>